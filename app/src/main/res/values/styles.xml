<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextInput" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">152dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/color_font_welcome</item>
    </style>

    <style name="EditInput" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/input_radius</item>
    </style>

    <style name="TextAccount" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/color_font_welcome</item>
    </style>
</resources>
